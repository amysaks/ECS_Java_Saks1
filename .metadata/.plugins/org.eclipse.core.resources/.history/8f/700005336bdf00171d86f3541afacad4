import java.util.Scanner;

public class CollatzSequence
{
	public static void main( String[] args )
	{
		Scanner keyboard = new Scanner(System.in);
		int number;
		double nume,numo;

		System.out.println("LETS CREATE A COLLAT SEQUENCE.");
		System.out.print("If the number is even, divide it by 2 ");
		System.out.print("If the number is odd, multiply by 3 and add 1 ");
		System.out.print("Repeat this decision until you reach 1 ");
		 number = keyboard.nextInt();
		
		while (number >1)
		{
			if (number %2 ==0)
			{
				nume = number/2.0;
			}
			else
			{
				numo=(number*3) +1;
			}
		}
	}	

}
